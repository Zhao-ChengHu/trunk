<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fitsSystemWindows="true"/>

    <com.sojoline.lib_zxing.view.FinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_corner_color="@color/colorPrimary"
        app:inner_corner_length="26dp"
        app:inner_corner_width="3dp"
        app:inner_margintop="140dp"
        app:inner_scan_bitmap="@drawable/scan_line"
        app:inner_scan_speed="6"/>
</FrameLayout>