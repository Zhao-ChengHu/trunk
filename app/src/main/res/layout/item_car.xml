<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lv_white"
    android:padding="10dp">
    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_car_200"/>
    <TextView
        android:id="@+id/tv_car_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/iv_car"
        android:textSize="@dimen/ts_lel_two"
        android:textColor="@color/primary_text_black"/>
    <TextView
        android:id="@+id/tv_car_number"
        android:layout_below="@id/tv_car_type"
        android:layout_alignBottom="@id/iv_car"
        android:layout_marginLeft="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#3366ff"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/iv_car"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="äº¬A88888"
        android:textColor="@color/lv_white"
        android:textSize="@dimen/ts_lel_two"/>
</RelativeLayout>