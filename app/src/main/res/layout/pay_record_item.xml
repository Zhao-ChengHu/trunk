<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lv_white"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusableInTouchMode="true"
        android:textColor="@color/primary_text_black"
        android:textSize="@dimen/ts_lel_two"
        android:textStyle="bold"
        tools:text="双杰电气"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_record_code"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                tools:text="订单号：16233888888888888"/>
            <TextView
                android:id="@+id/tv_record_date"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                tools:text="交易日期：2017-05-12"/>
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/tv_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                tools:text="支付方式：APP支付"/>
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/tv_record_cardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_record_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="555.000"
                android:textColor="@color/lv_red"
                android:textSize="@dimen/ts_lel_two"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>