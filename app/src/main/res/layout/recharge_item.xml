<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/lv_white">
    <TextView
        android:id="@+id/record_pay_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_lel_three"
        android:textColor="@color/secondary_text_black"/>

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/record_pay_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alipay"/>

        <TextView
            android:id="@+id/record_pay_name"
            android:layout_toRightOf="@id/record_pay_img"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_lel_two"
            android:textColor="@color/primary_text_black"/>
        <TextView
            android:layout_alignBottom="@id/record_pay_img"
            android:layout_toRightOf="@id/record_pay_img"
            android:layout_marginLeft="10dp"
            android:id="@+id/record_pay_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text_black"
            android:textSize="@dimen/ts_lel_three"/>

        <TextView
            android:id="@+id/record_pay_money"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/ts_lel_two"
            android:textColor="@color/lv_red"/>
    </RelativeLayout>

</LinearLayout>