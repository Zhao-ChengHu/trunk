<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/fl_root"
        layout="@layout/common_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_root"
                android:padding="10dp"
                android:text="@string/charge_info"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_two"/>
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:background="@color/lv_white"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/start_time"/>
                    <TextView
                        android:id="@+id/tv_start_time"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/end_time"/>
                    <TextView
                        android:id="@+id/tv_stop_time"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/charge_duration"/>
                    <TextView
                        android:id="@+id/tv_sum_time"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="充电电量"/>
                    <TextView
                        android:id="@+id/tv_sum_power"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/fee_electric"/>
                    <TextView
                        android:id="@+id/tv_electric_fee"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView4"
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/fee_service"/>
                    <TextView
                        android:id="@+id/tv_service_fee"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/fee_parking"/>
                    <TextView
                        android:id="@+id/tv_park_fee"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:padding="10dp"
                android:text="@string/trade_info"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_two"/>
            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:background="@color/lv_white"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/batch_code"/>
                    <TextView
                        android:id="@+id/tv_order_code"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/substation_name"/>
                    <TextView
                        android:id="@+id/tv_sub_name"
                        android:layout_marginLeft="20dp"
                        android:focusable="true"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusableInTouchMode="true"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/pile_code"/>
                    <TextView
                        android:id="@+id/tv_pile_code"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/fee_sum"/>
                    <TextView
                        android:id="@+id/tv_sum_balance"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/pay_type"/>
                    <TextView
                        android:id="@+id/tv_pay_type"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pay_cardId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        style="@style/Style_TV_Record_Se"
                        android:text="@string/pay_code"/>
                    <TextView
                        android:id="@+id/tv_pay_cardId"
                        style="@style/Style_TV_Record_Pr"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>