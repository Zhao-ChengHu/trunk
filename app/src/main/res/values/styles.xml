<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlterDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--隐藏旧的ActionBar，用Toolbar取代-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:textColorPrimary">@color/lv_white</item>-->
    </style>

    <!-- 加载Dialog-->
    <style name="Loading_Dialog_Theme" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Mime_TextView_Pri">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/primary_text_black</item>
        <item name="android:textSize">@dimen/ts_lel_two</item>
    </style>

    <style name="Mime_TextView_Sec">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/secondary_text_black</item>
        <item name="android:textSize">@dimen/ts_lel_two</item>
    </style>

    <style name="Mime_ImageView">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">#cdcdcd</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Mime_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Mime_IV_Right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Mime_IV_BaseLine">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#cdcdcd</item>
    </style>

    <style name="Info_LinearLayout">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/lv_white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 竖直分割线-->
    <style name="Mime_Vertical_line">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/lv_bottom_divider</item>
    </style>

    <!-- 水平分割线-->
    <style name="Mime_Horizontal_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lv_bottom_divider</item>
    </style>

    <style name="General_Type_One">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/ts_lel_two</item>
        <item name="android:textColor">@color/primary_text_black</item>
    </style>

    <!-- filter popuwindow textview-->
    <style name="tv_filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:minHeight">@dimen/filter_item</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">@color/secondary_text_black</item>
        <item name="android:textSize">@dimen/ts_lel_two</item>
    </style>

    <!-- 自定义dialog-->
    <style name="DialogWindowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!-- 自定义dialog-->
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- 自定义dialog-->
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义dialog-->
    <style name="dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/btn_red_selector</item>
        <item name="android:textColor">@color/lv_white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- RED BTN -->
    <style name="red_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lv_white</item>
        <item name="android:textSize">@dimen/ts_lel_two</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/btn_red_selector</item>
    </style>

    <!--RED STROKE BTN-->
    <style name="red_stroke_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/ts_lel_three</item>
        <item name="android:background">@drawable/btn_red_stroke</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button_Send_Code">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/btn_red_stroke</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditText_Input">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Psd_Input_TV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Style_TV_Record_Se">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_black</item>
    </style>

    <style name="Style_TV_Record_Pr">
        <item name="android:gravity">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_black</item>
    </style>

    <style name="Custom_TextView_First">
        <item name="android:background">@color/lv_white</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_lel_two</item>
        <item name="android:textColor">@color/primary_text_black</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
